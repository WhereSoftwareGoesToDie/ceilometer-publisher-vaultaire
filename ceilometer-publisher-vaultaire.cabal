build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.18

library
  hs-source-dirs:    lib
  default-language:  Haskell2010

  exposed-modules:   Ceilometer.Types
                     Ceilometer.Process

  build-depends:     base >=4.7 && <4.8,
                     aeson,
                     text,
                     bytestring,
                     hslogger,
                     pipes,
                     unordered-containers,
                     siphash,
                     marquise,
                     amqp,
                     optparse-applicative,
                     time,
                     old-locale,
                     mtl,
                     vaultaire-collector-common >= 0.2.0,
                     vaultaire-common

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto

executable ceilometer-publisher-vaultaire
  hs-source-dirs:    src
  default-language:  Haskell2010
  main-is:           Main.hs

  build-depends:     base >=4.7 && <4.8,
                     aeson,
                     text,
                     bytestring,
                     ceilometer-publisher-vaultaire

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto

test-suite           tests
  hs-source-dirs:    test
  main-is:           Main.hs
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  build-depends:     base >=3 && <5,
                     containers >=0.5 && <0.6,
                     mtl,
                     pipes,
                     time,
                     HUnit,
                     hspec,
                     QuickCheck,
                     bytestring,
                     text,
                     unordered-containers,
                     ceilometer-publisher-vaultaire,
                     vaultaire-common,
                     vaultaire-collector-common,
                     marquise >= 3.1.0

  ghc-options:       -threaded
  ghc-prof-options:  -auto-all
